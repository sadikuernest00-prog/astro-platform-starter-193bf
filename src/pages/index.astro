---
const pageTitle = "Lindt Excellence ‚Äì Spesialtilbud";
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <title>{pageTitle}</title>
    <meta
      name="description"
      content="Bestill 3 eksklusive Lindt Excellence-sjokoladeplater for kun 399 NOK inkludert frakt."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        --bg-dark: #101014;
        --bg-light: #f5f5f7;
        --accent: #c9a35b;
        --accent-dark: #a88439;
        --text-main: #121212;
        --text-light: #ffffff;
        --border-soft: rgba(0, 0, 0, 0.06);
        --radius-xl: 20px;
        --shadow-soft: 0 18px 45px rgba(0, 0, 0, 0.16);
        --shadow-small: 0 8px 20px rgba(0, 0, 0, 0.1);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: radial-gradient(circle at top, #22232a 0, #050509 55%);
        color: var(--text-main);
      }

      main {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        padding: 32px 16px 64px;
      }

      .page {
        width: 100%;
        max-width: 1120px;
        background: linear-gradient(180deg, #131419 0, #0a0b0f 45%, #050509 100%);
        border-radius: 32px;
        box-shadow: var(--shadow-soft);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.04);
      }

      .page-inner {
        display: grid;
        grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
        gap: 32px;
        padding: 32px 32px 40px;
      }

      @media (max-width: 900px) {
        .page-inner {
          grid-template-columns: minmax(0, 1fr);
          padding: 24px 18px 32px;
        }
      }

      /* LEFT SIDE ‚Äì INFO & PRODUCTS */

      .branding {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 14px;
      }

      .brand-mark {
        width: 30px;
        height: 30px;
        border-radius: 999px;
        background: radial-gradient(circle at 30% 30%, #fef5dc, #b88b3e);
        border: 1px solid rgba(255, 255, 255, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 16px;
        color: #3d2a08;
        box-shadow: var(--shadow-small);
      }

      .brand-name {
        text-transform: uppercase;
        letter-spacing: 0.18em;
        font-size: 11px;
        color: rgba(255, 255, 255, 0.7);
      }

      h1 {
        margin: 4px 0 12px;
        font-size: clamp(26px, 3vw, 32px);
        color: #ffffff;
      }

      .subtitle {
        font-size: 15px;
        line-height: 1.5;
        color: rgba(255, 255, 255, 0.78);
        max-width: 460px;
      }

      .price-line {
        margin: 18px 0 22px;
        display: flex;
        align-items: baseline;
        gap: 12px;
      }

      .price-main {
        font-size: 26px;
        font-weight: 650;
        color: #ffe9b7;
      }

      .price-detail {
        font-size: 13px;
        color: rgba(255, 255, 255, 0.65);
      }

      .pill-row {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 22px;
      }

      .pill {
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 11px;
        letter-spacing: 0.09em;
        text-transform: uppercase;
        border: 1px solid rgba(255, 255, 255, 0.16);
        color: rgba(255, 255, 255, 0.78);
        backdrop-filter: blur(10px);
      }

      .pill--gold {
        border-color: var(--accent);
        color: #f8e3b7;
        background: rgba(0, 0, 0, 0.45);
      }

      .cta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 26px;
      }

      .btn-primary,
      .btn-ghost {
        border-radius: 999px;
        padding: 11px 18px;
        font-size: 14px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: transform 0.14s ease, box-shadow 0.14s ease,
          background 0.18s ease, color 0.18s ease;
      }

      .btn-primary {
        background: linear-gradient(135deg, #f5d99f, #c2903d);
        color: #201407;
        box-shadow: 0 14px 30px rgba(0, 0, 0, 0.35);
      }

      .btn-primary span.icon {
        font-size: 16px;
      }

      .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.5);
      }

      .btn-ghost {
        border: 1px solid rgba(255, 255, 255, 0.25);
        color: rgba(255, 255, 255, 0.8);
        background: rgba(12, 13, 20, 0.6);
      }

      .btn-ghost:hover {
        background: rgba(255, 255, 255, 0.04);
        transform: translateY(-1px);
      }

      .trust-row {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        font-size: 11px;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 24px;
      }

      .trust-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }

      .trust-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: linear-gradient(135deg, #98e3b2, #32b872);
        box-shadow: 0 0 0 4px rgba(53, 184, 113, 0.23);
      }

      .products {
        margin-top: 10px;
        padding: 16px 16px 18px;
        border-radius: 18px;
        background: radial-gradient(circle at top left, #343848 0, #171922 45%, #070810 100%);
        border: 1px solid rgba(255, 255, 255, 0.06);
      }

      .products-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: rgba(255, 255, 255, 0.86);
        font-size: 13px;
        margin-bottom: 10px;
      }

      .products-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 10px;
      }

      @media (max-width: 700px) {
        .products-grid {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

      .product-card {
        background: rgba(6, 6, 10, 0.9);
        border-radius: 16px;
        padding: 10px 10px 12px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .product-image {
        background: #f6f6f8;
        border-radius: 14px;
        padding: 12px 8px;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .product-image img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      .product-name {
        font-size: 12px;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
      }

      .product-note {
        font-size: 11px;
        color: rgba(255, 255, 255, 0.6);
      }

      /* RIGHT SIDE ‚Äì ORDER FORM */

      .order-panel {
        background: var(--bg-light);
        border-radius: 28px;
        padding: 20px 20px 22px;
        box-shadow: var(--shadow-soft);
        border: 1px solid var(--border-soft);
      }

      @media (max-width: 900px) {
        .order-panel {
          border-radius: 22px;
        }
      }

      .order-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 10px;
      }

      .order-title {
        font-size: 18px;
        font-weight: 650;
      }

      .order-badge {
        font-size: 11px;
        padding: 5px 9px;
        border-radius: 999px;
        background: #e5f7eb;
        color: #1f7e3e;
        border: 1px solid #b5e5c4;
      }

      .order-summary {
        font-size: 13px;
        color: #4b4b52;
        margin-bottom: 16px;
      }

      .bundle-line {
        padding: 8px 10px;
        border-radius: 14px;
        background: #ffffff;
        border: 1px dashed rgba(0, 0, 0, 0.08);
        margin-bottom: 16px;
        font-size: 13px;
        display: flex;
        justify-content: space-between;
        gap: 10px;
      }

      .bundle-price {
        font-weight: 650;
        color: #1c1b22;
      }

      form {
        display: grid;
        gap: 12px;
      }

      label {
        font-size: 12px;
        font-weight: 500;
        color: #2c2c35;
        display: block;
        margin-bottom: 4px;
      }

      input,
      textarea {
        width: 100%;
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.12);
        padding: 10px 11px;
        font-size: 13px;
        font-family: inherit;
        outline: none;
        transition: border-color 0.14s ease, box-shadow 0.14s ease,
          background 0.14s ease;
        background: #ffffff;
      }

      input:focus,
      textarea:focus {
        border-color: var(--accent-dark);
        box-shadow: 0 0 0 1px rgba(194, 139, 52, 0.3);
      }

      textarea {
        resize: vertical;
        min-height: 70px;
      }

      .inline-fields {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 10px;
      }

      @media (max-width: 520px) {
        .inline-fields {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .hint {
        font-size: 11px;
        color: #6a6b74;
        margin-top: -4px;
      }

      .submit-row {
        margin-top: 6px;
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .btn-submit {
        width: 100%;
        border-radius: 999px;
        padding: 11px 16px;
        border: none;
        background: linear-gradient(135deg, #c99639, #f4dfaa);
        font-weight: 650;
        font-size: 14px;
        cursor: pointer;
        color: #301c05;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: var(--shadow-small);
        transition: transform 0.14s ease, box-shadow 0.14s ease,
          filter 0.14s ease;
      }

      .btn-submit span.icon {
        font-size: 16px;
      }

      .btn-submit:hover {
        transform: translateY(-1px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.24);
        filter: brightness(1.03);
      }

      .submit-note {
        font-size: 11px;
        color: #676976;
      }

      .contact {
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px dashed rgba(0, 0, 0, 0.18);
        font-size: 11px;
        color: #666673;
      }

      .contact strong {
        color: #262631;
      }

      .contact a {
        color: #333399;
        text-decoration: none;
      }

      .contact a:hover {
        text-decoration: underline;
      }

      footer {
        padding: 0 32px 20px;
        font-size: 11px;
        color: rgba(255, 255, 255, 0.32);
        display: flex;
        justify-content: space-between;
        gap: 12px;
      }

      @media (max-width: 900px) {
        footer {
          padding: 0 18px 18px;
          flex-direction: column;
        }
      }
    </style>
  </head>
