---
const products = [
  {
    id: "roasted-hazelnut",
    name: "Lindt Excellence Dark Roasted Hazelnut Bar 100g",
    description:
      "Smooth dark chocolate with crunchy roasted hazelnut pieces. Perfect balance between rich cocoa and nutty sweetness.",
    price: "250 NOK",
    oldPrice: "",
    badge: "New",
    weight: "100g",
    cocoa: "Excellence · Dark",
    image: "/images/lindt-dark-roasted-hazelnut-100g.png"
  },
  {
    id: "cranberry-hazelnut-almond",
    name: "Lindt Excellence Dark Cranberry, Hazelnut & Almond Bar 100g",
    description:
      "Fine dark chocolate with fruity cranberries and roasted hazelnuts & almonds for a layered, crunchy taste.",
    price: "250 NOK",
    oldPrice: "",
    badge: "Popular choice",
    weight: "100g",
    cocoa: "Excellence · Dark",
    image: "/images/lindt-dark-cranberry-hazelnut-almond-100g.png"
  },
  {
    id: "sea-salt",
    name: "Lindt Excellence Dark Sea Salt Bar 100g",
    description:
      "Elegant dark chocolate with a touch of hand-harvested sea salt that lifts the cocoa notes and adds a delicate crunch.",
    price: "250 NOK",
    oldPrice: "",
    badge: "Bestseller",
    weight: "100g",
    cocoa: "Excellence · Dark",
    image: "/images/lindt-dark-sea-salt-100g.png"
  },
  {
    id: "les-grandes-caramel-hazelnut",
    name: "Lindt LES GRANDES Milk Caramel Hazelnut 150g",
    description:
      "Generous Swiss milk chocolate filled with whole hazelnuts and caramel pieces. Extra-thick and indulgent.",
    price: "250 NOK",
    oldPrice: "",
    badge: "Limited stock",
    weight: "150g",
    cocoa: "Les Grandes · Milk",
    image: "/images/lindt-les-grandes-milk-caramel-hazelnut-150g.png"
  }
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>AmicBridge Chocolate Boutique – Finest Lindt Bars</title>
    <meta
      name="description"
      content="Trusted online shop for genuine Lindt chocolate bars – dark, sea salt, cranberry and hazelnut selections. Secure checkout and fast shipping."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <header class="top-bar">
      <div class="container top-bar__inner">
        <div class="logo">
          <span class="logo__mark">AB</span>
          <span class="logo__text">AmicBridge Chocolate</span>
        </div>
        <nav class="nav">
          <a href="#products">Shop</a>
          <a href="#why-trust">Why trust us</a>
          <a href="#shipping">Shipping</a>
          <a href="#faq">FAQ</a>
        </nav>
      </div>
    </header>

    <main>
      <!-- HERO SECTION -->
      <section class="hero">
        <div class="container hero__inner">
          <div class="hero__text">
            <h1>
              Genuine Lindt<span class="hero__accent">. Delivered with care.</span>
            </h1>
            <p>
              Premium Swiss chocolate bars straight from verified suppliers to your
              door. Temperature-protected packaging, clear expiry dates and a
              no-melt guarantee*.
            </p>
            <div class="hero__actions">
              <a href="#products" class="btn btn--primary">Shop Lindt Bars</a>
              <a href="#why-trust" class="btn btn--ghost">Why people trust us</a>
            </div>
            <div class="hero__trust-row">
              <div class="pill">✔ 100% authentic Lindt products</div>
              <div class="pill">✔ Secure payments</div>
              <div class="pill">✔ Fast EU/EEA shipping</div>
            </div>
            <p class="hero__note">
              *During warm seasons we use insulated packaging for long routes.
            </p>
          </div>
          <div class="hero__highlight">
            <div class="hero-card">
              <p class="hero-card__label">Today’s favourite</p>
              <img
                src={products[2].image}
                alt={products[2].name}
                class="hero-card__image"
              />
              <div class="hero-card__info">
                <h2>{products[2].name}</h2>
                <p>{products[2].description}</p>
                <div class="hero-card__bottom">
                  <span class="price">{products[2].price}</span>
                  <button class="btn btn--small">Add to cart</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- PRODUCT GRID -->
      <section id="products" class="section section--light">
        <div class="container">
          <div class="section-header">
            <h2>Lindt chocolate we stock right now</h2>
            <p>Small curated selection, all at 250 NOK per bar.</p>
          </div>

          <div class="products-grid">
            {products.map((product) => (
              <article class="product-card" id={product.id}>
                {product.badge && <span class="product-card__badge">{product.badge}</span>}
                <img
                  src={product.image}
                  alt={product.name}
                  class="product-card__image"
                  loading="lazy"
                />
                <div class="product-card__body">
                  <p class="product-card__cocoa">{product.cocoa}</p>
                  <h3 class="product-card__title">{product.name}</h3>
                  <p class="product-card__description">{product.description}</p>
                  <div class="product-card__meta">
                    <span class="product-card__weight">{product.weight}</span>
                  </div>
                  <div class="product-card__footer">
                    <div class="product-card__price-wrap">
                      <span class="product-card__price">{product.price}</span>
                    </div>
                    <button class="btn btn--primary btn--small">
                      Add to cart
                    </button>
                  </div>
                  <p class="product-card__trust">
                    Always shipped in original sealed Lindt packaging with visible best
                    before date.
                  </p>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>

      <!-- TRUST / WHY US -->
      <section id="why-trust" class="section section--dark">
        <div class="container">
          <div class="section-header section-header--center">
            <h2>Why people feel safe ordering from AmicBridge</h2>
            <p>
              You’re not buying “mystery chocolate from the internet”. You’re buying
              from a small shop obsessed with doing things properly.
            </p>
          </div>

          <div class="features-grid">
            <div class="feature-card">
              <h3>Verified suppliers only</h3>
              <p>
                We source our Lindt bars from official distributors within the EU/EEA.
                No grey-market stock, no re-wrapped products.
              </p>
            </div>
            <div class="feature-card">
              <h3>Food-safe handling</h3>
              <p>
                Stored in dry, temperature-controlled conditions. During warm months we
                ship with extra protection so your chocolate arrives as a bar, not a
                puddle.
              </p>
            </div>
            <div class="feature-card">
              <h3>Transparent labeling</h3>
              <p>
                Ingredients, allergens and expiry dates are always clearly shown on the
                product photos and in your order confirmation.
              </p>
            </div>
            <div class="feature-card">
              <h3>Secure checkout</h3>
              <p>
                Encrypted payment, no card details stored on our servers. You get order
                tracking from the moment we hand the parcel to the courier.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- SHIPPING & RETURNS -->
      <section id="shipping" class="section section--light">
        <div class="container">
          <div class="section-header">
            <h2>Shipping & returns</h2>
            <p>Clear rules, no surprises.</p>
          </div>

          <div class="info-grid">
            <div class="info-card">
              <h3>Where we ship</h3>
              <p>
                We currently ship within the EU/EEA. Delivery times are usually{" "}
                <strong>2–5 business days</strong> depending on your country.
              </p>
            </div>
            <div class="info-card">
              <h3>Heat-safe packing</h3>
              <p>
                When the forecast is warm, we upgrade packaging for temperature
                protection on longer routes. For local deliveries we minimize plastic
                and use recycled cardboard.
              </p>
            </div>
            <div class="info-card">
              <h3>Freshness guarantee</h3>
              <p>
                Your bars will have at least <strong>60 days</strong> before their “best
                before” date on the day we ship. If a product arrives damaged, contact
                us with a photo and we’ll fix it.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- SOCIAL PROOF -->
      <section class="section section--soft">
        <div class="container">
          <div class="section-header section-header--center">
            <h2>What early customers say</h2>
            <p>Real feedback from chocolate-powered humans.</p>
          </div>

          <div class="reviews-grid">
            <div class="review-card">
              <p class="review-card__rating">★★★★★</p>
              <p class="review-card__text">
                “Came in perfect condition even during a warm week. Sea Salt bar tasted
                exactly like the ones I get in store.”
              </p>
              <p class="review-card__author">– Anna, repeat customer</p>
            </div>
            <div class="review-card">
              <p class="review-card__rating">★★★★★</p>
              <p class="review-card__text">
                “Love the small selection – it feels curated, not overwhelming. The
                Les Grandes bar is insanely good.”
              </p>
              <p class="review-card__author">– Markus</p>
            </div>
            <div class="review-card">
              <p class="review-card__rating">★★★★☆</p>
              <p class="review-card__text">
                “Fast shipping and clear communication. Package looked premium enough to
                gift straight away.”
              </p>
              <p class="review-card__author">– Elise</p>
            </div>
          </div>
        </div>
      </section>

      <!-- FAQ -->
      <section id="faq" class="section section--light">
        <div class="container">
          <div class="section-header section-header--center">
            <h2>Questions before you taste?</h2>
            <p>Some answers we give all the time.</p>
          </div>
          <div class="faq">
            <div class="faq-item">
              <h3>Are these bars really from Lindt?</h3>
              <p>
                Yes. We only buy sealed Lindt products from official distributors within
                the EU/EEA. Packages are never opened or repacked by us.
              </p>
            </div>
            <div class="faq-item">
              <h3>How do you handle allergies?</h3>
              <p>
                Ingredients and allergen information are visible on both the product
                photos and in the description. Always read the original packaging when
                you receive your order to double-check.
              </p>
            </div>
            <div class="faq-item">
              <h3>Can I return chocolate?</h3>
              <p>
                Because chocolate is a food product, we can’t resell opened items. If a
                bar arrives damaged or clearly not as described, contact us within 7
                days and we’ll sort a replacement or refund.
              </p>
            </div>
            <div class="faq-item">
              <h3>Do you comply with local food rules?</h3>
              <p>
                We follow EU/EEA food-safety and labeling rules for storage and
                shipping. Make sure your own business registration and tax details are
                also in order in your country.
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container footer__inner">
        <div class="footer__brand">
          <div class="logo">
            <span class="logo__mark">AB</span>
            <span class="logo__text">AmicBridge Chocolate</span>
          </div>
          <p class="footer__tagline">
            A tiny online shop with a big respect for good chocolate and clear rules.
          </p>
        </div>
        <div class="footer__cols">
          <div>
            <h4>Contact</h4>
            <p>Email: <a href="mailto:support@amicbridge.com">support@amicbridge.com</a></p>
            <p>Org. number / company info – add here</p>
          </div>
          <div>
            <h4>Legal</h4>
            <p><a href="#">Terms & Conditions</a></p>
            <p><a href="#">Privacy policy</a></p>
          </div>
        </div>
      </div>
      <div class="footer__bottom">
        <div class="container footer__bottom-inner">
          <p>© {new Date().getFullYear()} AmicBridge. Lindt is a registered trademark of Lindt &amp; Sprüngli.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --bg-dark: #111217;
    --bg-darker: #050509;
    --bg-light: #f7f4f0;
    --bg-soft: #fff8eb;
    --accent-gold: #c99a3d;
    --accent-soft-gold: #f2d28b;
    --text-main: #181818;
    --text-muted: #626262;
    --white: #ffffff;
    --border-subtle: #e2ddd7;
    --shadow-soft: 0 18px 45px rgba(0, 0, 0, 0.16);
    --radius-lg: 18px;
    --radius-xl: 26px;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    color: var(--text-main);
    background-color: var(--bg-light);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .container {
    width: 100%;
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Top bar */
  .top-bar {
    position: sticky;
    top: 0;
    z-index: 30;
    background: linear-gradient(to bottom, rgba(5, 5, 12, 0.96), rgba(5, 5, 12, 0.8));
    backdrop-filter: blur(14px);
    color: var(--white);
  }

  .top-bar__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.9rem 0;
  }

  .logo {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .logo__mark {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.22);
    background: radial-gradient(circle at 0 0, #fbe1a6, #a47425);
    color: #1a1105;
    font-size: 0.8rem;
  }

  .logo__text {
    font-size: 0.82rem;
  }

  .nav {
    display: flex;
    gap: 1.5rem;
    font-size: 0.9rem;
  }

  .nav a {
    position: relative;
    padding-bottom: 0.15rem;
  }

  .nav a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1px;
    width: 0;
    background: linear-gradient(to right, var(--accent-gold), var(--accent-soft-gold));
    transition: width 0.2s ease-out;
  }

  .nav a:hover::after {
    width: 100%;
  }

  /* Hero */
  .hero {
    background: radial-gradient(circle at top left, #3b2b0d, #050509);
    color: var(--white);
    padding: 3.5rem 0 3rem;
  }

  .hero__inner {
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
    gap: 3rem;
    align-items: center;
  }

  .hero__text h1 {
    font-size: clamp(2.3rem, 3vw + 1.6rem, 3.3rem);
    margin: 0 0 1rem;
    line-height: 1.1;
  }

  .hero__accent {
    display: block;
    font-weight: 400;
    font-size: 0.9em;
    color: var(--accent-soft-gold);
  }

  .hero__text p {
    margin: 0.3rem 0 1.4rem;
    color: rgba(255, 255, 255, 0.86);
    max-width: 30rem;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.9rem;
    margin-bottom: 1.4rem;
  }

  .btn {
    border-radius: 999px;
    border: none;
    padding: 0.8rem 1.4rem;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.3rem;
    transition: transform 0.12s ease-out, box-shadow 0.12s ease-out, background 0.12s ease-out;
  }

  .btn--primary {
    background: linear-gradient(to right, #f8e1a8, #c99a3d);
    color: #271503;
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.35);
  }

  .btn--primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
  }

  .btn--ghost {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #f6eee1;
  }

  .btn--ghost:hover {
    background: rgba(255, 255, 255, 0.08);
  }

  .btn--small {
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
  }

  .hero__trust-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.7rem;
  }

  .pill {
    font-size: 0.75rem;
    padding: 0.3rem 0.7rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(7, 7, 15, 0.5);
  }

  .hero__note {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .hero__highlight {
    display: flex;
    justify-content: center;
  }

  .hero-card {
    border-radius: var(--radius-xl);
    background: radial-gradient(circle at top, #f8e1a8, #b2741b);
    padding: 1.2rem;
    box-shadow: var(--shadow-soft);
    color: #2c1502;
    max-width: 360px;
  }

  .hero-card__label {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    opacity: 0.8;
    margin-bottom: 0.4rem;
  }

  .hero-card__image {
    width: 100%;
    border-radius: 16px;
    background: #fff;
    padding: 0.5rem 1rem 0.7rem;
    object-fit: contain;
  }

  .hero-card__info h2 {
    font-size: 1.1rem;
    margin: 0.8rem 0 0.3rem;
  }

  .hero-card__info p {
    font-size: 0.85rem;
    margin: 0 0 0.7rem;
  }

  .hero-card__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .price {
    font-weight: 700;
    font-size: 1.1rem;
  }

  /* Sections */
  .section {
    padding: 3rem 0;
  }

  .section--light {
    background: var(--bg-light);
  }

  .section--dark {
    background: radial-gradient(circle at top, #2b2923, #050509);
    color: var(--white);
  }

  .section--soft {
    background: var(--bg-soft);
  }

  .section-header {
    margin-bottom: 1.8rem;
  }

  .section-header h2 {
    margin: 0 0 0.4rem;
    font-size: 1.6rem;
  }

  .section-header p {
    margin: 0;
    color: var(--text-muted);
  }

  .section-header--center {
    text-align: center;
  }

  .section--dark .section-header p {
    color: rgba(255, 255, 255, 0.7);
  }

  /* Products */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 1.6rem;
  }

  .product-card {
    background: #ffffff;
    border-radius: var(--radius-lg);
    box-shadow: 0 14px 35px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .product-card__badge {
    position: absolute;
    top: 0.8rem;
    left: 0.8rem;
    background: #c99a3d;
    color: #1e1204;
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.09em;
  }

  .product-card__image {
    width: 100%;
    height: 230px;
    object-fit: contain;
    background: radial-gradient(circle at top, #fffaf1, #f0e3cf);
  }

  .product-card__body {
    padding: 0.9rem 1rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .product-card__cocoa {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #a07a32;
  }

  .product-card__title {
    margin: 0;
    font-size: 1rem;
  }

  .product-card__description {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .product-card__meta {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .product-card__footer {
    margin-top: 0.6rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .product-card__price-wrap {
    display: flex;
    gap: 0.35rem;
    align-items: baseline;
  }

  .product-card__price {
    font-weight: 700;
    font-size: 1rem;
  }

  .product-card__trust {
    margin: 0.4rem 0 0;
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  /* Features / Trust */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.4rem;
  }

  .feature-card {
    background: rgba(12, 12, 19, 0.9);
    border-radius: var(--radius-lg);
    padding: 1rem 1.1rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .feature-card h3 {
    margin: 0 0 0.4rem;
    font-size: 1rem;
    color: var(--accent-soft-gold);
  }

  .feature-card p {
    margin: 0;
    font-size: 0.88rem;
    color: rgba(255, 255, 255, 0.78);
  }

  /* Info cards */
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 1.4rem;
  }

  .info-card {
    background: #fff;
    border-radius: var(--radius-lg);
    padding: 1rem 1.1rem;
    border: 1px solid var(--border-subtle);
  }

  .info-card h3 {
    margin: 0 0 0.4rem;
    font-size: 1rem;
  }

  .info-card p {
    margin: 0;
    font-size: 0.88rem;
    color: var(--text-muted);
  }

  /* Reviews */
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 1.4rem;
  }

  .review-card {
    background: #fff;
    border-radius: var(--radius-lg);
    padding: 1rem 1.1rem;
    border: 1px solid var(--border-subtle);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .review-card__rating {
    margin: 0 0 0.5rem;
    font-size: 0.9rem;
    color: #c99a3d;
  }

  .review-card__text {
    margin: 0 0 0.6rem;
    font-size: 0.9rem;
  }

  .review-card__author {
    margin: 0;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  /* FAQ */
  .faq {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.2rem;
    text-align: left;
  }

