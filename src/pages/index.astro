<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>AmicBridge Chocolate Boutique – Finest Lindt Bars</title>
    <meta name="description" content="Trusted Lindt chocolate shop. 250 NOK each. Secure checkout and fast shipping."/>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>

    <!-- top stuff stays same (I shortened here due to message limit) -->
    <!-- … your header and hero code from previous version (unchanged)… -->

    <main>
      <section id="products" class="section section--light">
        <div class="container">
          <div class="section-header">
            <h2>Lindt chocolate</h2>
            <p>All items 250 NOK.</p>
          </div>

          <style>
            .products-grid {
              display:grid;
              grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
              gap:20px;
            }
            .product-card {
              background:#fff;border-radius:14px;padding:14px;
              border:1px solid #e3e3e3;
            }
            .product-card img{
              width:100%;height:240px;object-fit:cover;border-radius:12px;
            }
          </style>

          <div class="products-grid">
            {products.map(p => (
              <div class="product-card">
                <img src={p.image} alt={p.name}/>
                <p style="font-size:.8rem;color:#7A6B4D;margin:.6rem 0;">{p.cocoa}</p>
                <h3 style="margin:0;">{p.name}</h3>
                <p style="font-size:.85rem;margin:.5rem 0;color:#666;">{p.description}</p>
                <p style="font-weight:bold;font-size:1.1rem;margin:.7rem 0;">
                  {p.price}
                </p>
                <button style="background:#d1b064;color:#181818;border:none;padding:.6rem 1.2rem;border-radius:50px;cursor:pointer;">
                  Add to cart
                </button>
              </div>
            ))}
          </div>
        </div>
      </section>
    </main>

  </body>
</html>
